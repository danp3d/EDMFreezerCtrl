#include "EDMRelay.h"
#include <Arduino.h>

inline void EDMRelay::toggleState() {
	if (isOpen())
		close();
	else
		open();
}

inline void EDMRelay::open() {
	digitalWrite(_pin, !_normallyOpen);
	_sendingSignal = !_normallyOpen;
}

inline void EDMRelay::close() {
	digitalWrite(_pin, _normallyOpen);
	_sendingSignal = _normallyOpen;
}
